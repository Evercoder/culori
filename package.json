{
	"name": "culori",
	"version": "0.20.1",
	"main": "build/culori.js",
	"type": "module",
	"repository": "git@github.com:Evercoder/culori.git",
	"author": "Dan Burzo <danburzo@gmail.com>",
	"description": "A general-purpose color library for JavaScript",
	"keywords": [
		"blend",
		"ciede2000",
		"cielab",
		"color",
		"color-difference",
		"cubehelix",
		"din99",
		"gradients",
		"hsi",
		"hsl",
		"hsv",
		"hwb",
		"interpolation",
		"lab",
		"lch",
		"lrgb",
		"mix",
		"rgb",
		"yiq"
	],
	"license": "MIT",
	"files": [
		"build"
	],
	"devDependencies": {
		"@11ty/eleventy": "^0.12.1",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
		"esbuild": "^0.12.28",
		"eslint": "^7.32.0",
		"eslint-plugin-import": "^2.24.2",
		"gh-pages": "^3.2.3",
		"husky": "^4.2.5",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"tap-spec": "^5.0.0",
		"tape": "^5.3.1"
	},
	"scripts": {
		"test": "tape 'test/*.js' | tap-spec",
		"build": "npm run build:esm && npm run build:cjs && npm run build:iife",
		"build:esm": "esbuild --bundle --minify --format=esm src/index.js --outfile=build/culori.js",
		"build:cjs": "esbuild --bundle --format=cjs src/index.js --outfile=build/culori.cjs.js",
		"build:iife": "esbuild --bundle --minify --format=iife src/index.js --outfile=build/culori.iife.js",
		"benchmark": "node benchmark/index.js",
		"prepublishOnly": "npm run lint && npm run build && npm run test",
		"docs:start": "eleventy --serve",
		"docs:build": "rm -rf www && eleventy",
		"docs:deploy": "npm run docs:build && gh-pages -d www --dotfiles",
		"lint": "eslint '{src,test}/**/*.js'"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"arrowParens": "avoid",
		"printWidth": 80
	},
	"sideEffects": false
}
