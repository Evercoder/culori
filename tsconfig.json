{
	"include": ["./src/**/*.js"],
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"allowJs": true,
		"declaration": false,
		"noEmit": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false
	}
}
