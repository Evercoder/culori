{
	"include": ["./src/**/*.js"],
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"allowJs": true,
		"declarationDir": "./types",
		"declaration": true,
		"emitDeclarationOnly": true,
		"importsNotUsedAsValues": "error",
		"noEmitOnError": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false
	}
}
